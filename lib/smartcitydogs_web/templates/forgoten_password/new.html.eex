<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>
  <body>
    <div class="register-photo">
      <div class="container">
        <div class="form-group">
            <%= form_for @changeset, @action, fn f -> %>

              <%= text_input f, :username, placeholder: "Потребителско име...", class: "form-control1" %>
              <%= error_tag f, :username %>

              <%= email_input f, :email, placeholder: "E-mail", class: "form-control1" %>
              <%= error_tag f, :email %>

              <%= text_input f, :phone, placeholder: "Телефонен номер...", class: "form-control1" %>
              <%= error_tag f, :phone %>

            <div class="under-form">
              

                <%= submit "ИЗПРАТИ", class: "btn btn-submit" %><br>
                <a class="link-cancel" href="/">ОТКАЗ</a>  
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
  </body>


  </html>
