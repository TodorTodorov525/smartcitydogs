<!DOCTYPE html>
<html>
<head>
<script src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js"></script>

</head>
<body>
<%= form_for @changeset, @action, [multipart: true] ,fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>There are some errors</p>
    </div>
  <% end %>

  <div class="form-group">
    <p> Add Photo: </p>
    <%= #file_input f, :photo, class: "form-control" %>
    <%= #file_input f, :photo, muliple: true %>
    <%= file_input f, :news_image, name: "files" %>
  </div>

  <div class="form-group">
    <%= text_input f, :title, placeholder: "Title",
                             class: "form-control" %>
    <%= error_tag f, :chip_number %>
  </div>

   <div class="editor">
    <%= textarea f, :content, placeholder: "Content",
                             class: "form-control", id: "editor" %>
    <%= error_tag f, :chip_number %>
  </div>
   
 <%= submit "Add News", class: "btn btn-primary" %>
   <% end %>
</body>
<script>
ClassicEditor
    .create( document.querySelector( '#editor' ) )
   
    .then( editor => {
        config.extraPlugins = 'image';
        config.extraPlugins = 'dialog';
        image: {
            toolbar: [ 'imageTextAlternative' ]
        }
    } )
    .catch( error => {
        console.error( error );
    } );

</script>
</html>