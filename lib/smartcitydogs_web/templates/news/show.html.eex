<div class="row pt-5">
  <div class="col">
    <div class="row">
      <div class="col">
        <img class="img-fluid" src="/<%= @news.image_url %>" alt="Generic placeholder image">
      </div>
      <div class="col">
        <h1><%= @news.title %></h1>
        <span>Дата: <%= NaiveDateTime.to_date( @news.date) %></span>
        <p>
          <%= render_markdown @news.content %>
        </p>
      </div>
    </div>
  </div>
</div>
