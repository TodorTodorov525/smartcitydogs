<div class="home-bg"></div>
<div class="row">
    <div class="col-lg-12 mt-5">
        <div class="homepage-slider ">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <h1 class="">Време е да поемем<br> отговорност за щастието на<br> най-добрите ни
                            приятели
                        </h1>
                    </div>
                    <div class="carousel-item">
                        <h1 class="">Време е да поемем<br> отговорност за щастието на<br> най-добрите ни
                            приятели
                        </h1>
                    </div>
                    <div class="carousel-item">
                        <h1 class="">Време е да поемем<br> отговорност за щастието на<br> най-добрите ни
                            приятели
                        </h1>
                    </div>
                </div>
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row mt-5 mb-3">
    <div class="col">
        <h3 class="text-white">Последни сигнали</h3>
    </div>
</div>
<div class="row slick ">
    <%= for signal <- @signals do %>
    <div class="col-lg-12" >
        <div class="card slick-card w-100" style="background-image:linear-gradient(rgba(0, 0, 0, 0.7),rgba(0, 0, 0, 0.7)), url('/<%= get_signals_images(signal.id) %>')">
            <div class="card-body">
                <div class="signal-type-label <%=signal.signals_types.prefix%>">
                    <%=signal.signals_types.name%>
                </div>
                <div class="slick-card-small text-gray">
                    <%=signal.inserted_at |> Timex.format!( "%d.%m.%y",:strftime)%> г.
                </div>
                <div class="slick-card-title">
                    <%=signal.signals_categories.name%>
                </div>
                <div class="slick-card-small text-gray mt-3">
                    <%=signal.address%>
                </div>
                <div class="slick-card-small text-white mt-3">
                    <i class="fas fa-search"></i> : <%=signal.view_count%>
                </div>
                <div class="slick-card-small text-white">
                    <i class="fas fa-arrow-up"></i> : <span id="signal-count"><%= signal.support_count %></span>

                </div>
                <div class="slick-card-small text-white">
                    <i class="far fa-comment fa-flip-horizontal"></i> :
                    <%=Enum.count(signal.signals_comments)%>
                </div>
            </div>
            <div class="card-footer text-center  border-0 bg-transparent">
                <a class="btn custom-btn" href="<%=signal_path(@conn,:show,signal.id)%>" role="button">Виж още</a>
            </div>
        </div>
    </div>
    <% end %>
</div>

<div class="row mt-5 mb-3">
    <div class="col">
        <h3 class="text-green">Новини</h3>
    </div>
</div>
<div class="row">
    <%= for news <- @news do %>
    <div class="col-lg-3">
        <div class="card">
            <img class="card-img-top"
                 src="<%= news.image_url%>"
                 alt="Card image cap">
            <div class="card-body">
                <p class="text-dark">
                    <small>
                        <%= Timex.format!(news.date, "%d.%m.%y",:strftime)%> г.
                    </small>
                </p>
                <h5 class="card-title"><%= news.title %></h5>
                <p class="card-text">
                    <%=String.slice(news.short_content,0..30)%> ...
                </p>


            </div>
            <div class="card-footer text-center border-0 bg-transparent">
                <a class="btn btn-default float-right text-green" href="<%=news_path(@conn, :show, news.id)%>" role="button">
                    Виж още
                </a>
            </div>
        </div>
    </div>
    <% end %>
</div>
<div class="row mt-5 mb-3">
    <div class="col">
        <h3 class="text-green">Последни регистрирани кучета</h3>
    </div>
</div>
<div class="row slick ">
    <%= for animal <- @animals do %>
    <%= render SmartcitydogsWeb.PageView, "animal_slide.html" , %{conn: @conn,animal: animal} %>
    <% end %>
</div>

<div class="row mt-5 mb-3">
    <div class="col">
        <h3 class="text-green">Последно осиновени кучета</h3>
    </div>
</div>

<div class="row slick">
    <%= for animal <- @adopted_animals do %>
    <%= render SmartcitydogsWeb.PageView, "animal_slide.html" , %{conn: @conn,animal: animal} %>
    <% end %>
</div>
