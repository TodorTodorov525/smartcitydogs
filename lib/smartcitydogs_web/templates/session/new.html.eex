<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

<body>

<div class="register-photo">

  <div class="container">
  <%= form_for @conn, session_path(@conn, :create),
                                            [as: :session], fn f -> %>

      <div class="form-group">
          <%= text_input f, :email, placeholder: "Имейл...", class: "form-control1" %>

          <%= password_input f, :password, placeholder: "Парола...", class: "form-control1" %>

          <div class="nav-link-pass">
            <a class="nav-link" id="forgotten-password" href="#">Забравена парола?</a>
          </div>
        <div class="under-form">



          <%= submit "ВХОД", class: "btn btn-submit" %>
         <br>

          <a class="link-cancel" href="/">ОТКАЗ</a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
</body>
</html>
