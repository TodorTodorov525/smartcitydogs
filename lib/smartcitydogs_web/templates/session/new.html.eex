<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

<body>

<div class="register-photo">

  <div class="container mt-3">
  <%= form_for @conn, session_path(@conn, :create),
                                            [as: :session], fn f -> %>

      <div class="form-group">
          <%= text_input f, :email, placeholder: "Имейл...", class: "form-control1" %>

          <%= password_input f, :password, placeholder: "Парола...", class: "form-control1" %>

          <div class="nav-link-pass">
            <%= link "Забравена парола?", to: forgoten_password_path(@conn, :new), class: "nav-link" %>
          </div>
        <div class="under-form">



          <%= submit "ВХОД", class: "btn btn-submit" %>
          <br />
          <br />
          <!-- <a class="btn btn-primary pull-right" href="<%=#session_url(@conn, :request,"facebook")%>" rel="no-follow">
            <i class="fa fa-facebook-square"></i> Facebook login</a>
          <br /> -->

          <a class="link-cancel" href="/">ОТКАЗ</a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</body>
</html>
