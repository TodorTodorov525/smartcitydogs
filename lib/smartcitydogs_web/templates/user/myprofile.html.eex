<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body>
    <div class="register-photo">
      <div class="container mt-3">
        <div class="container-show-user">
          <%= form_for @changeset, @action, fn f -> %>
            <%= if @changeset.action do %>
              <div class="alert alert-danger">
                <p>Oops, something went wrong! Please check the errors below.</p>
              </div>
          <% end %>

            <h2 align="center" style="color:white;font-family:monospace;">Hello <%= @user.first_name %> <%= @user.last_name %> </h2>
          

              <div class="form-group">


              <br />
              <br />
              <strong class="strong-show-user">New password:</strong>
              <%= text_input f, :password, class: "form-control1" %>
              <%= error_tag f, :password %>
              <br />
              <br />

              <strong class="strong-show-user">New email:</strong>
              <%= text_input f, :email, class: "form-control1" %>
              <%= error_tag f, :email %>
              <br />
              <br />


              <strong class="strong-show-user">New phone:</strong>
              <%= text_input f, :phone, class: "form-control1" %>
              <%= error_tag f, :phone %>


              <br />
              <br />
              <div class="under-form">

                <%= submit "Submit", class: "btn btn-submit" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
