<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="<%= static_path(@conn, "/css/register_user.css") %>">


</head>
<body>

<%= form_for @changeset, user_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>There are some errors</p>
    </div>
  <% end %>



  <div class="form-register">
    <label1>User Registration</label1>
    <br />

    <%= text_input f, :username, placeholder: "Username", class: "form-control1" %>
    <%= error_tag f, :username %>

    <br />
    <%= password_input f, :password, placeholder: "Password", class: "form-control1" %>
    <%= error_tag f, :password %>
    <br />


    <%= text_input f, :email, placeholder: "Email", class: "form-control1" %>
    <%= error_tag f, :email %>
    <br>

    <%= text_input f, :first_name, placeholder: "Firstname", class: "form-control1" %>
    <%= error_tag f, :first_name %>

    <br />
    <%= text_input f, :last_name, placeholder: "Lastname", class: "form-control1" %>
    <%= error_tag f, :last_name %>
    <br />

    <%= text_input f, :phone, placeholder: "Phone", class: "form-control1" %>
    <%= error_tag f, :phone %>

    <br />
    <%= text_input f, :users_types_id, placeholder: "User Type", class: "form-contro1l" %>
    <%= error_tag f, :users_types_id %>
    <br />
    <div class="under-form">

      <%= checkbox f, :checked, class: "form-control1" %> I'm agreed to the rules </p>

      <br />

      <%= submit "Create User", class: "btn btn-submit" %>
      <br /><br />
      <a class="link-cancel" href="/">Cancel</a>
      <%= submit "Sign up via Facebook", class: "btn btn-primary pull-right" %>
      <br /><br />
      <a href="/sessions/new"><label>I'm already registered</label></a>
    </div>
  </div>

<% end %>


</body>

</html>
